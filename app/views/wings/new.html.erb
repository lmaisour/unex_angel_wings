<div class ="container-fluid">
  <div class ="row">
    <div class ="col-md-6 col-sm-6">

    
        <%= form_for @wing, html: { multipart: true } do |f| %>
          <% if @wing.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@wing.errors.count, "error") %> prohibited this pet from being saved:</h2>
         
              <ul>
              <% @wing.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
         
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :age %><br>
            <%= f.number_field :age %>
          </div>
          <div class="field">
            <%= f.label :quote %><br>
            <%= f.text_field :quote %>
          </div>
          <div class="field">
            <%= f.label :course %><br>
            <%= f.text_field :course %>
          </div>
          <div class="field">
            <%= f.label :image %><br>
            <%= f.file_field :wingsphoto %>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>
    </div>
    <div class ="col-md-6 col-sm-6">
        <div class="container">
    <!-- <div class="row"> -->
<!--      <div class="col-sm-10 col-sm-offset-1"> -->
         <div class="col-md-4 col-sm-6">
          <% @wings.each do |p|  %>
             <div class="card-container">         
                <div class="card">
                    <div class="front">
                        <div class="cover">
                            <%= image_tag(p.wingsphoto, class: "img-fluid") %>
                        </div>
                        <div class="content">
                            <div class="main">      
<!--                                 <p class="profession">Name:</p> -->
                                <h1 class="text-center"><%= p.name %></h1>
                                <!-- <p class="profession">How UCLA Extension helped me take flight:</p><p class="text-center"><%= p.quote %></p> -->
                            </div>
                        </div>
                    </div> <!-- end front panel -->
                    <div class="back">
                        <div class="header">
                            
                        </div>
                        <div class="content">
                            <div class="main">
                                <p class="text-center">Enrolled in</p>
                                <h3 class="text-center"><%= p.course %></h3>

                                <p class="text-center">Age</p>
                                <h3 class="text-center"><%= p.age %></h3>

                                <p class="text-center">How has UCLA Extension helped you take flight:</p>
                                <h3 class="text-center"><%= p.quote %></h3>

                            </div>
                        </div>
                        
                    </div> <!-- end back panel -->
                </div> <!-- end card -->
            </div> <!-- end card-container -->
              <% end %>
        </div> <!-- end col sm 3 -->
<!--         <div class="col-sm-1"></div> -->
            </div> <!-- end card-container -->
        </div> <!-- end col-sm-3 -->
        <!-- </div> end col-sm-10 -->
    <!-- </div> end row -->
    <div class="space-200"></div>
</div>

     </div>
  </div>
</div>


